<table id="tblRoles" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>名稱</th>
            <th>刪除</th>
        </tr>
    </thead>
    <tbody>
        <% roles.forEach(function(r){ %>
          <tr>
            <td><%=r.R_NAME %></td>
            <td><a class="btnDelete btn btn-danger" data-name="<%=r.R_NAME %>" data-id="<%=r.R_ID %>">
                  刪除 
              </a>
            </td>
          </tr>
        <%  }); %>
    </tbody>
</table>
<script type="text/javascript">
  $(function(){
    $("#tblRoles").DataTable({
      "aLengthMenu": [[25, 50, 75, -1], [25, 50, 75, "All"]],
      "pageLength": 25
    });
  });

</script>