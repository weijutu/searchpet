<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header"><%=title %>
            <small>更新資料</small>
        </h2>
    </div>
</div>
<div class="row">
    <form class="form-horizontal" method="post" action="/auth/profile">
        <div class="form-group">
            <label for="txtUsername" class="control-label col-xs-2">會員帳號</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="txtUsername" name="username" value="<%=user.ACCOUNT %>" placeholder="請輸入會員編號"  disabled="disabled">

            </div>
        </div>
        <div class="form-group">
            <label for="txtName" class="control-label col-xs-2">姓名</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="txtName" name="name" value="<%=user.NAME %>" placeholder="請輸入您的姓名">
            </div>
        </div>
        <div class="form-group">
            <label for="txtEmail" class="control-label col-xs-2">電子信箱</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="txtEmail" name="email" value="<%=user.EMAIL %>" placeholder="請輸入電子信箱">
            </div>
        </div>
        <div class="form-group">
            <label for="txtTelphone" class="control-label col-xs-2">電話號碼</label>
            <div class="col-xs-10">
                <input type="text" class="form-control" id="txtTelphone" name="telphone" value="<%=user.TELPHONE %>" placeholder="請輸入電話號碼">
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <button type="submit" class="btn btn-primary">更新資料(還沒有實作)</button>
            </div>
        </div>
    </form>
</div>